@page "/register"
@using Microsoft.AspNetCore.Authorization
<h3>@PageTitle</h3>
@attribute [AllowAnonymous]
<EditForm Model="registrationRequest" OnValidSubmit="HandleRegistration">
    <div>
        <div class="mb-3">
            @foreach(var message in _messages)
            {
                <li>message</li>
            }
        </div>
    </div>
    <div class="mb-3">
        <label for="email">Email</label>
        <InputText id="email" @bind-Value="registrationRequest.Email" class="form-control" />
    </div>
    <div class="mb-3">
        <label for="password">Password</label>
        <InputText id="password" @bind-Value="registrationRequest.Password" class="form-control" type="password" />
    </div>
        <div class="mb-3">
        <label for="confirmpassword">Confirm Password</label>
        <InputText id="confirmPassword" @bind-Value="registrationRequest.ConfirmPassword" class="form-control" type="password" />
    </div>
    <button type="submit" class="btn btn-primary">Register</button> 
</EditForm>
