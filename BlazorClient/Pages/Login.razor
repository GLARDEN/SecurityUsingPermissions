@page "/login"
@using Microsoft.AspNetCore.Authorization

@attribute [AllowAnonymous]

<h3>Login</h3>

<EditForm Model="_loginRequest" OnValidSubmit="ExecuteLogin" class="card card-body bg-light mt-5">    
    <div class="form-group row">
        <label for="email" class="col-md-2 col-form-label">Email:</label>
        <div class="col-md-10">
            <InputText id="email" class="form-control" @bind-Value="_loginRequest.Email"/> 
            
        </div>
    </div>
    <div class="form-group row">
        <label for="password" class="col-md-2 col-form-label">Password:</label>
        <div class="col-md-10">
            <InputText type="password" id="password" class="form-control" @bind-Value="_loginRequest.Password" />
            
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-right">
            <button type="submit" class="btn btn-success">Login</button>
        </div>
    </div>
</EditForm>